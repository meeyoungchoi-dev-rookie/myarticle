{{>layouts/header}}
<div class="jumbotron">
    <h1>글 상세조회</h1>
</div>

<table class="table text-center table-hover">
    <tbody>
    {{#article}}
        <tr>
            <th>#</th>
            <td>{{articleId}}</td>
        </tr>
        <tr>
            <th>제목</th>
            <td>{{title}}</td>
        </tr>
        <tr>
            <th>내용</th>
            <td>{{content}}</td>
        </tr>
        <tr>
            <th>조회수</th>
            <td>{{cnt}}</td>
        </tr>



    {{/article}}
    </tbody>

</table>

<button type="submit" onclick="location.href='/articles/{{articleId}}/edit'" class="btn btn-info btn-block">수정</button>
<button type="submit" onclick="location.href='/articles'" class="btn btn-primary btn-block">목록으로</button>
{{>layouts/footer}}